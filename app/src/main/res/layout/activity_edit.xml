<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/edit_meme_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit the image"
        android:textAlignment="center"
        android:textColor="@color/teal_200"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ja.burhanrashid52.photoeditor.PhotoEditorView
        android:id="@+id/photo_editor_view"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_meme_text" />

    <ImageButton
        android:id="@+id/meme_add_text_no_bg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_text_no_bg"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintStart_toEndOf="@+id/meme_undo"
        app:layout_constraintTop_toTopOf="@+id/meme_undo" />


    <ImageButton
        android:id="@+id/meme_add_text_with_bg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_text_with_bg"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintEnd_toStartOf="@+id/meme_redo"
        app:layout_constraintTop_toTopOf="@+id/meme_redo" />


    <ImageButton
        android:id="@+id/meme_undo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_undo"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:id="@+id/meme_redo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_redo"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/save_local"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_download"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>